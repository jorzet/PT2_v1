<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rounded_date_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/date_schedule"
            android:transitionName="@string/date_image_container_schedule"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="50dp" >
        </ImageView>
        <TextView
            android:id="@+id/date"
            android:transitionName="@string/date_text_container_schedule"
            android:scaleType="centerCrop"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textColor="@color/blanco"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/general_description_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rounded_date_schedule"
        android:paddingStart="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/rounded_date_schedule"
        android:layout_marginStart="30dp"
        android:layout_below="@+id/general_description_schedule"
        android:paddingTop="5dp" />

</RelativeLayout>