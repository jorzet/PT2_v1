<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rounded_date_schedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/date_schedule"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/app_name" >
        </ImageView>
        <TextView
            android:id="@+id/date"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textColor="@color/blanco"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/general_description_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rounded_date_schedule"
        android:paddingLeft="10dp"
        android:textSize="14sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/description_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/rounded_date_schedule"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/general_description_schedule"
        android:paddingTop="5dp" />

</RelativeLayout>