<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_test_suggestion"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/suggestion_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_do_test"
        android:layout_below="@+id/suggestion"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/test_system"
        android:layout_below="@+id/suggestion_test"
        android:padding="12dp"
        android:backgroundTint="@color/colorGreenButton"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>