<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


                <TextView
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/negro"
                    android:textSize="20sp"
                    android:text="Progreso"/>

                <TextView
                    android:id="@+id/porcentage_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress"
                    android:layout_marginTop="15dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/negro"
                    android:textSize="20sp"
                    android:text="0%"/>

                <ProgressBar
                    android:id="@+id/progressbar_circle"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="270dp"
                    android:layout_height="270dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/drawable_circle_dark_blue"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="100"
                    android:progressDrawable="@drawable/drawable_circle_yellow"
                    android:rotation="-90" />


                <TextView
                    android:id="@+id/recording_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="Tiempo de grabaciÃ³n"
                    android:textColor="@color/negro"
                    android:layout_above="@+id/chronometer_recording"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/chronometer_recording"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="00:00:00"
                    android:textColor="@color/negro"
                    android:textSize="40sp" />

                <TextView
                    android:id="@+id/total_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="4:00"
                    android:textColor="@color/negro"
                    android:layout_below="@+id/chronometer_recording"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="29dp" />

                <ImageView
                    android:id="@+id/start_recording"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="18dp"
                    android:src="@drawable/ic_start_recording"
                    android:layout_below="@+id/progressbar_circle"
                    android:layout_centerHorizontal="true" />

                <ImageView
                    android:id="@+id/restart_recording"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_reset_recording"
                    android:layout_alignParentBottom="true"
                    android:layout_alignEnd="@+id/total_time"
                    android:layout_marginBottom="16dp" />


</RelativeLayout>